<footer id="footer">
    <div class="p-10 bg-primary">
        <div class="container mx-auto flex flex-col">
            <div class="flex flex-col items-center text-center text-white my-4 scroll-mt-16" id="contact">
                <h6 class="mb-2">
                    Let's get in touch
                </h6>
                <p class="text-lg md:text-2xl">
                    We will get back to you within 24 hours
                </p>
                <button
                    class="mt-8 bg-secondary px-4 py-3.5 text-primary rounded-md text-lg font-medium shadow-lg hover:opacity-75">
                    <a class="flex items-center" href="mailto:{{footer.contact.email}}">
                        <div>
                            SEND A MAIL
                        </div>
                        <div class="ml-2">
                            <img src="/static/img/mail-logo.svg" class="w-5 h-5" alt="mail" />
                        </div>
                    </a>
                </button>
            </div>
            <hr class="mb-8 mt-16 text-white" />
            <div class="flex flex-col md:flex-row justify-between items-center my-4 gap-8">
                <div class="flex flex-col gap-1 text-center md:text-left">
                    <div class="text-xl font-semibold text-white capitalize">{{footer.contact.name}}</div>
                    <div class="text-lg text-white capitalize">{{footer.contact.city}}, {{footer.contact.state}}</div>
                </div>
                <div class="flex flex-col gap-1 text-center md:text-left">
                    <div class="text-xl font-semibold text-white">Contact us</div>
                    <div class="text-lg text-white">{{footer.contact.email}}</div>
                </div>
                <div class="flex flex-col gap-1 text-center md:text-left">
                    <div class="text-xl font-semibold text-white">Follow us</div>
                    <div class="flex gap-4">
                        {% for social in footer.socialLinks %}
                        <div class="hover:opacity-75">
                            <a href="{{social.link}}" target="_blank" rel="noopener noreferrer">
                                <img src="{{social.logo}}" alt="{{social.name}}" class="w-8 h-8" />
                            </a>
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>